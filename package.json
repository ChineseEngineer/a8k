{
  "name": "imt",
  "version": "0.12.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hxfdarling/onepack.git"
  },
  "author": "zman <hxfdarling@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "lint": "eslint --cache \"{lib,bin,src}/**/*.js\"",
    "release": "npm run build && standard-version && git push --follow-tags origin"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{json,css,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{jsx,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/travis-cli": "^7.2.1",
    "@vuepress/plugin-back-to-top": "^1.0.0-alpha.0",
    "@vuepress/plugin-pwa": "^1.0.0-alpha.0",
    "babel-eslint": "^10.0.1",
    "commitlint-config-imt": "0.0.4",
    "eslint": "^5.15.1",
    "eslint-config-zman": "^0.2.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "standard-version": "^4.4.0",
    "vuepress": "^0.14.9"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "node_modules/commitlint-config-imt/cz-config.js"
    }
  },
  "description": "集成 webpack 的 react 项目最佳实践配置的构建工具",
  "bugs": {
    "url": "https://github.com/hxfdarling/onepack/issues"
  },
  "homepage": "https://github.com/hxfdarling/onepack#readme",
  "directories": {
    "doc": "docs"
  }
}
